!!! 5
%html
  %head
    %title Wordtree
    = favicon_link_tag '/favicon.ico'
    = stylesheet_link_tag :application
    = javascript_include_tag :application 
    = csrf_meta_tags 
  %body
    #site
      %header
        %h1= link_to 'wordtree', root_url
      %nav#primary
        = link_to 'Home', root_url
      #page
        %h2= yield :title
        %ul.breadcrumb
          %li= link_to 'Home', root_url
          %span.separator
          %li= link_to 'Keyword Search', root_url
        = yield
      %footer
        %p= raw "Copyright #{Time.now.year} &copy; Coventry University.  All Rights Reserved."
